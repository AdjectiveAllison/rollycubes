server {
	server_name beta.rollycubes.com;
	root /var/www/beta/build;
	location /ws {
		proxy_set_header Host $host;
		proxy_pass http://localhost:4001;
		proxy_redirect off;
	}
	location ~ ^/(create|cookie|list)$ {
		proxy_set_header Host $host;
		proxy_pass http://localhost:4001;
		proxy_redirect off;
	}
	location / {
		try_files $uri $uri/ /index.html;
	}

    listen 443 ssl; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/beta.rollycubes.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/beta.rollycubes.com/privkey.pem; # managed by Certbot
}
server {
    if ($host = beta.rollycubes.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

	listen [::]:80;
	listen 80;
	server_name beta.rollycubes.com;
    return 404; # managed by Certbot


}
